{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "DEBUG=1 make",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "group": "build",
            "command": "make clean",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "clear": true
            }
        }
    ]
}